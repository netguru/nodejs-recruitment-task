{
    "compilerOptions": {
      "experimentalDecorators": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "dist",
      "skipLibCheck": true
    },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
    "lib": ["es2015"]
}