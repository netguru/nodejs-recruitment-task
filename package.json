{
  "name": "nodejs-recruitment-task",
  "version": "0.0.1",
  "description": "Movie challenge microservice",
  "author": "Maycon Aguiar",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist && prisma generate",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:docker": "docker-compose up -d --build",
    "start:prod": "node dist/main",
    "lint": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^7.6.7",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/platform-fastify": "^8.1.1",
    "@prisma/client": "^3.2.1",
    "axios": "^0.27.2",
    "camelcase-keys": "^7.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "fastify": "^3.29.0",
    "jest-ts-auto-mock": "^2.0.0",
    "jshint": "^2.13.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^12.1.2",
    "nestjs-pino": "^2.2.0",
    "nock": "^13.2.0",
    "path": "^0.12.7",
    "pino-http": "^6.5.0",
    "pino-pretty": "^7.0.1",
    "prettier": "^2.5.1",
    "qs": "^6.10.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ttypescript": "^1.5.12",
    "webpack": "^5.73.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@playwright/test": "^1.21.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^12.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "nock": "^13.2.0",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-auto-mock": "^3.5.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript"
      }
    },
    "setupFiles": [
      "<rootDir>jest-setup.ts"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
